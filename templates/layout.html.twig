        <div class="toast-container position-fixed top-0 end-0 p-3 mt-2">
            <div class="toast text-bg-{{ label }}" role="alert" aria-live="assertive" aria-atomic="true" data-controller="toast">
                <div class="d-flex">
                    <div class="toast-body">{{ message }}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
