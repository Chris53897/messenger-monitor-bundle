<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block meta_title %}Messenger Monitor: {% block title %}{% endblock %}{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,{{ include('@ZenstruckMessengerMonitor/icon.svg.twig')|url_encode }}">

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

        <style>
            abbr[title] {
                text-decoration: none;
                border-bottom: 1px dotted;
            }

            .card-alert {
                border: 0;
                border-radius: 0;
            }
            .card .card-alert:last-child {
                border-bottom-left-radius: var(--bs-card-border-radius);
                border-bottom-right-radius: var(--bs-card-border-radius);
            }

            .card-table {
                margin-bottom: 0;
            }
            .card-table tbody tr:last-child td, .card-table tbody tr:last-child th {
                border-bottom: 0;
            }
            .card-table tbody tr:last-child td:first-child, .card-table tbody tr:last-child th:first-child {
                border-bottom-left-radius: var(--bs-card-border-radius);
            }
            .card-table tbody tr:last-child td:last-child {
                border-bottom-right-radius: var(--bs-card-border-radius);
            }

            .spinner-border-slow {
                animation-duration: 1.5s;
            }
        </style>
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/htmx.org@1.9.12/dist/htmx.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/idiomorph@0.3.0/dist/idiomorph-ext.min.js"></script>

        <script type="module">
            import { Application, Controller } from "https://unpkg.com/@hotwired/stimulus/dist/stimulus.js"
            window.Stimulus = Application.start()

            Stimulus.register('refreshable', class extends Controller {
                static values = {
                    url: String,
                    poll: {
                        type: Number,
                        default: 5000,
                    },
                    autorefresh: {
                        type: Boolean,
                        default: true,
                    }
                };
                static targets = ['indicator', 'content', 'start', 'pause', 'refresh'];

                interval;

                connect() {
                    if (this.autorefreshValue) {
                        this.start();
                    }
                }

                start() {
                    this.interval = setInterval(() => this.refresh(), this.pollValue);

                    if (this.hasStartTarget) {
                        this.startTarget.classList.add('d-none');
                    }

                    if (this.hasPauseTarget) {
                        this.pauseTarget.classList.remove('d-none');
                    }

                    if (this.hasIndicatorTarget) {
                        this.indicatorTarget.classList.remove('d-none');
                    }
                }

                pause() {
                    clearInterval(this.interval);

                    if (this.hasStartTarget) {
                        this.startTarget.classList.remove('d-none');
                    }

                    if (this.hasPauseTarget) {
                        this.pauseTarget.classList.add('d-none');
                    }

                    if (this.hasIndicatorTarget) {
                        this.indicatorTarget.classList.add('d-none');
                    }
                }

                async refresh() {
                    if (document.hidden) {
                        return;
                    }

                    try {
                        const response = await fetch(this.urlValue);
                        const html = await response.text();

                        Idiomorph.morph(this.contentTarget, html, { morphStyle: 'innerHTML'});
                    } catch (error) {
                        console.error('Error:', error);
                    }
                }
            });

            Stimulus.register('message-details', class extends Controller {
                click(event) {
                    event.preventDefault();

                    fetch(this.element.getAttribute('href'))
                        .then(response => response.text())
                        .then(html => {
                            const modal = new bootstrap.Modal(document.getElementById('message-details-modal'));
                            const modalContent = modal._element.querySelector('.modal-content');

                            modalContent.innerHTML = html;
                            modal.show();
                        })
                        .catch(error => console.error('Error:', error))
                    ;
                }
            });

            Stimulus.register('toast', class extends Controller {
                connect() {
                    (new bootstrap.Toast(this.element)).show();
                }
            });

            Stimulus.register('post-link', class extends Controller {
                click(event) {
                    event.preventDefault();

                    if (this.element.dataset.confirm && !confirm(this.element.dataset.confirm)) {
                        return;
                    }

                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = this.element.getAttribute('href');

                    if (this.element.dataset.token) {
                        const token = document.createElement('input');
                        token.type = 'hidden';
                        token.name = '_token';
                        token.value = this.element.dataset.token;
                        form.appendChild(token);
                    }

                    document.body.appendChild(form);
                    form.submit();
                }
            });
        </script>
    {% endblock %}
</head>
<body>
